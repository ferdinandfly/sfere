{% extends "ArdetemSfereBundle::layout.html.twig" %}
{% block page_content %}
    <div id="page_style" >
        <div class="col-md-6">
            {% block sonata_user_login %}
                <div class="panel panel-info">

                <div  class="componentheading">
                   {{ 'title_user_authentication'|trans({}, 'SonataUserBundle') }}
                </div>
                    {% block sonata_user_login_error %}
                        {% if error %}
                            <div class="alert alert-danger alert-error">{{ error|trans({}, 'SonataUserBundle') }}</div>
                        {% endif %}
                    {% endblock %}

                    {% block sonata_user_login_form %}
                        <form action="{{ path("fos_user_security_check") }}" method="post" role="form"
                              class="form-horizontal">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                            <p class="form-group">
                                <label for="username"
                                       class="col-lg-4 col-sm-4 control-label">{{ 'security.login.username'|trans({}, 'SonataUserBundle') }}</label>

                                <div class="col-lg-8 col-sm-8"><input type="text" class="form-control" id="username"
                                                                      name="_username" value="{{ last_username }}"
                                                                      required="required"/></div>
                            </p>
                            <p class="form-group control-group">
                                <label for="password"
                                       class="col-lg-4 col-sm-4 control-label">{{ 'security.login.password'|trans({}, 'SonataUserBundle') }}</label>

                                <div class="col-lg-8 col-sm-8"><input type="password" class="form-control" id="password"
                                                                      name="_password" required="required"/></div>
                            </p>
                            <p class="form-group">
                                <div class="col-sm-offset-4 col-sm-8">
                                    <div class="checkbox control-group">
                                        <label for="remember_me">
                                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                            {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                        </label>
                                    </div>
                                </div>
                            </p>
                            <div class="form-group">
                                <div class="col-sm-offset-4 col-sm-8">
                                    <input type="submit" id="_submit" name="_submit" class="button"
                                           value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
                                </div>
                            </div>
                            <ul>
                                <li>
                                    <a href="{{ path('fos_user_resetting_request') }}">{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('fos_user_registration_register') }}">
                                        {{ 'link_register'|trans({}, 'SonataUserBundle') }}</a>
                                </li>


                            </ul>
                        </form>
                    {% endblock %}
                </div>
            </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}
