{% extends "ArdetemSfereBundle:Default:detail.layout.html.twig" %}
{% block page_detail %}
    <div>
    <div id="vmMainPage">

    <script>
        console.debug(_gaq.push(['_trackEvent', 'Products', 'A11', 'Visto']));
    </script>

    <script src="/templates/responsive/js/tabs.js"></script>
    <table border="0" style="width: 100%;">
    <tbody>
    <tr>
        <td rowspan="1" colspan="3">

            <h1>{{ product.name }}</h1>

            <div class="product_desc">
               {{ product.resume }}
            </div>
            <div class="product_img"><a
                        href="{{ path("sfere_product_show", {"slug": product.slug}) }}"
                        title="{{ product.name }}" ><img
                            src="{{ base_url }}{{ product.image }}"
                            alt="{{ product.name }}" width="250px" border="0"></a></div>
        </td>
    </tr>
    <tr>
    <td rowspan="1" colspan="3">
    <ul id="product_tab">
        <li id="prod_0" class="active"> {{ "product.description" | trans }}</li>
        <li id="prod_1" class=""> {{ "product.download" | trans }}</li>
        <li id="prod_2" class=""> {{ "product.relative" | trans }}</li>
    </ul>
    <div id="content_tabs">
    <div class="content active" rel="prod_0">
    <table style="height: 332px;" cellspacing="0" cellpadding="0" border="0" width="90%">
        <tbody>
        <tr>
            <td style="color:#00A3D2;vertical-align:text-top;text-align:justify;padding:20px;">
                {{ product.description }}
            </td>
        </tr>

        </tbody>
    </table>
    </div>
    <div class="content" rel="prod_1">
        <ul class="large_button_download">
            <li>
                <a onclick="_gaq.push(['_trackPageview', 'Download']);" id="download_pdf_button"
                   href="{{ base_url }}{{ product.document }}">
                    <div class="file_icons pdf"></div>
                    <div class="content">
                        <div class="title"> Télécharger la fiche en PDF</div>
                        <div class="description"> Fiche neutre en PDF avec les spécifications du produit</div>
                    </div>
                </a>
            </li>
        </ul>

    </div>
    <div class="content" rel="prod_2">
        <!-- chelo_158 -->
        <div id="product_list" style="width:100%; float:none;">
        </div>
    </div>
    </div>
    </td>
    </tr>

    </tbody>
    </table>

    <div id="statusBox" style="text-align:center;display:none;visibility:hidden;"></div>
    </div>
    </div>

{% endblock %}